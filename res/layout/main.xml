<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#f0f0ff"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Weather in the Dnepr"
            />
    <Button
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Get weather"
            android:id="@+id/button" android:layout_gravity="center"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="84dp"
                android:id="@+id/editText" android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp" android:layout_marginBottom="17dp"/>
    <ImageView
            android:layout_width="172dp"
            android:layout_height="219dp"
            android:id="@+id/imageView" android:layout_gravity="center" android:src="@drawable/sunrise_700"/>


</LinearLayout>

